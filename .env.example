# ReportPortal API Configuration
REPORTPORTAL_URL=https://reportportal-ocs4.apps.dno.ocp-hub.prod.psi.redhat.com
REPORTPORTAL_API_TOKEN=your_api_token_here
REPORTPORTAL_PROJECT=default_project_name

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=reportportal_data

# Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_RATE_LIMIT=10
SYNC_TIMEOUT=30
SYNC_MAX_RETRIES=3

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_INCREMENTAL_SYNC=true
ENABLE_FULL_SYNC=true